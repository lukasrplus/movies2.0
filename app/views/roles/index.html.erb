<h1>Roles</h1>

<!-- <p><%= link_to 'Add a New Character', new_role_url %></p> -->

<table>
  <thead>
    <tr>
      <th>Character</th>
      <th>Actor</th>
      <th>Movie</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= Actor.find_by(id: role.actor_id).name %></td>
      <td><%= Movie.find_by(id: role.movie_id).title %></td>

      <td><%= link_to 'Show', role_url(role) %></td>
      <td><%= link_to 'Edit', edit_role_url(role) %></td>
      <td><%= link_to 'Destroy', role_url(role), method: 'delete', data: { confirm: "Do you really want to delete this role?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

