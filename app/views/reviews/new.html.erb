<h1>Review for <%= @movie.title %></h1>


<%= form_tag(reviews_url, method: 'post') do %>

  <%= hidden_field_tag :movie_id, @movie.id %>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

  <div>
    <%= label_tag :body %><br />
    <%= text_area_tag :body %>
  </div>

  <div>
    <%= label_tag :rating %><br />
    <%= number_field_tag :rating %>
  </div>


  <div>
    <%= submit_tag "Create Review" %>
  </div>
<% end %>
